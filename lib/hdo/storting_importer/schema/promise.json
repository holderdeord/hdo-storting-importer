{
  "id": "hdo#promise",
  "description": "a party promise",
  "type":"object",
  "properties": {
    "kind": {
      "type": "string",
      "description": "This is always 'hdo#promise'",
      "default": "hdo#promise",
      "required": true
    },
    "externalId": {
      "type": "string",
      "description": "A unique identifier for this promise.",
      "required": true
    },
    "parties": {
      "type": "array",
      "description": "List of parties (i.e. 'A', 'SV', 'Sp'). Usually a single party.",
      "required": true,
      "items": {
        "type": "string"
      }
    },
    "general": {
      "type": "boolean",
      "description": "Whether this is considered a general promise (i.e. can be ambigious whether it has been fulfilled).",
      "required": true
    },
    "categories": {
      "type": "array",
      "description": "List of category names.",
      "items": { "type": "string" },
      "required": true
    },
    "source": {
      "type": "string",
      "description": "The source of the promise.",
      "required": true
    },
    "page": {
      "type": "integer",
      "description": "What page in the source the promise was found on"
    },
    "body": {
      "type": "string",
      "description": "The body text of the promise.",
      "required": true
    },
    "date": {
      "type": "string",
      "description": "The date the promise was made.",
      "format": "date",
      "required": true
    }
  }
}
