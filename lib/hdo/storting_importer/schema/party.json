{
  "id": "hdo#party",
  "description": "a political party",
  "type":"object",
  "properties": {
    "kind": {
      "type": "string",
      "description": "This is always 'hdo#party'",
      "default": "hdo#party",
      "required": true
    },
    "external_id": {
      "type": "string",
      "description": "A unique identifier for the party.",
      "required": true
    },
    "name": {
      "description": "The name of the party",
      "type": "string",
      "required": true
    },
    "governing_periods": {
      "type": "array",
      "description": "Periods where this party was in the elected government.",
      "items": {
        "type": "object",
        "properties": {
          "start_date": {
            "type": "string",
            "format": "date",
            "description": "When the governing period started.",
            "required": true
          },
          "end_date": {
            "type": "string",
            "format": "date",
            "description": "When the governing period stopped."
          }
        }
      }
    }
  }
}
