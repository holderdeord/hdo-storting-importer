<?xml version="1.0" encoding="UTF-8"?>
<categories>
  <%- categories.each do |category| -%>
  <category>
    <externalId><%= category[:externalId] %></externalId>
    <name><%= category[:name] %></name>
    <subcategories>
      <%- category[:subCategories].each do |subcategory| -%>
      <category>
        <externalId><%= subcategory[:externalId] %></externalId>
        <name><%= subcategory[:name] %></name>
      </category>
      <%- end -%>
    </subcategories>
  </category>
  <%- end -%>
</categories>