<?xml version="1.0" encoding="UTF-8"?>
<categories>
  <%- categories.each do |category| -%>
  <category>
    <externalId><%= category.external_id %></externalId>
    <name><%= category.name %></name>
    <subcategories>
      <%- category.children.each do |subcategory| -%>
      <category>
        <externalId><%= subcategory.external_id %></externalId>
        <name><%= subcategory.name %></name>
      </category>
      <%- end -%>
    </subcategories>
  </category>
  <%- end -%>
</categories>