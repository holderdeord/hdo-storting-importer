<?xml version="1.0" encoding="UTF-8"?>
<issues>
  <%- issues.each do |issue| -%>
  <issue>
    <externalId><%= issue.external_id %></externalId>
    <summary><%= issue.summary %></summary>
    <description><%= issue.description %></description>
    <type><%= issue.type %></type>
    <status><%= issue.status %></status>
    <lastUpdate><%= issue.last_update %></lastUpdate>
    <reference><%= issue.reference %></reference>
    <documentGroup><%= issue.document_group %></documentGroup>
    <%- if issue.committee -%>
    <committee><%= issue.committee %></committee>
    <%- end -%>
    <%- if issue.categories && issue.categories.any? -%>
    <categories>
      <%- issue.categories.each do |category| -%>
      <category><%= category %></category>
      <%- end -%>
    </categories>
    <%- end -%>
  </issue>
  <%- end -%>
</issues>